{
  "name": "file43",
  "version": "1.0.0",
  "description": "File43 â€“ local media converter (Electron + Node + FFmpeg)",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "app": "electron .",
    "dist": "electron-builder"
  },
  "build": {
  "appId": "com.file43.app",
  "productName": "File43",
  "files": [
    "electron-main.js",
    "server.js",
    "public/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "mac": {
    "target": "dmg",
    "category": "public.app-category.utilities"
  },
  "win": {
    "target": "portable",
    "artifactName": "File43-${version}-portable-${arch}.exe"
  }
}

  ,
  "dependencies": {
    "archiver": "^6.0.0",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^1.4.5-lts.1",
    "@ffmpeg-installer/ffmpeg": "^1.1.0"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  }
}
